<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpecialActivity">

    <TextView
        android:id="@+id/tv_install_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="特殊权限1-安装未知来源应用（Android8.0以上）"
        android:textSize="20sp"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/btn_check_install_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="检查是否允许安装未知来源应用"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_install_app"/>

    <Button
        android:id="@+id/btn_get_install_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请求允许安装未知来源应用"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_check_install_app"/>

    <TextView
        android:id="@+id/tv_write_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="特殊权限2-修改系统设置（系统应用使用）"
        android:textSize="20sp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/btn_get_install_app"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/btn_check_write_settins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="检查是否允许修改系统设置"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_write_settings"/>

    <Button
        android:id="@+id/btn_get_wirte_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请求允许修改系统设置"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_check_write_settins"/>

    <TextView
        android:id="@+id/tv_system_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:text="特殊权限3-设置悬浮窗(6.0以下默认可以使用)"
        android:textSize="20sp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/btn_get_wirte_settings"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/btn_check_system_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="检查是否允许设置悬浮窗"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_system_window"/>

    <Button
        android:id="@+id/btn_get_system_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请求允许设置悬浮窗"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_check_system_window"/>

    <Button
        android:id="@+id/btn_goto_permission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="去应用详情页看看"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>